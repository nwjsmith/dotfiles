[alias]
  co = checkout
  ctags = !.git/hooks/ctags
  dc = diff --cached --word-diff=color
  dci = duet-commit
  delete-merged-branches = !git branch --merged master | grep -v -e 'master' -e '\\*' | xargs -n 1 git branch -d && git remote prune origin
  di = diff --word-diff=color
  dmg = duet-merge
  drb = rebase -i --exec 'git duet-commit --amend --reset-author'
  drv = duet-revert
  l = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(green) %an, %ar%Creset'
  list-branches = branch --sort=committerdate
  spp = !git stash && git pull && git stash pop
  st = status
  unstage = reset -- 
  yolo = push --force-with-lease
[core]
  excludesfile = /Users/nwjsmith/.gitignore
  editor = vim
  trustctime = false
[push]
  default = current
[pull]
  rebase = true
[color]
  ui = true
[mergetool "fugitive"]
  cmd = vim --nofork -c \"Gdiff\" \"$MERGED\"
[merge]
  renamelimit = 10000
  tool = fugitive
[mergetool]
  keepBackup = false
[include]
  path = ~/.gitconfig.platform
  path = ~/.gitconfig.local
[init]
  templateDir = ~/.git-template
[commit]
  gpgsign = true
  template = ~/.gitmessage
  verbose = true
[user]
  email = nwjsmith@gmail.com
  name = Nate Smith
[diff]
  compactionHeuristic = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
