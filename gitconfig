  co = checkout
  dc = diff --cached
  di = diff
  fix = commit --amend --no-edit
  l = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(green) %an, %ar%Creset'
  st = status
  unstage = reset -- 
  yolo = push --force-with-lease
